{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.62.0.json",
  "server": {
    "logger": {
      "level": "{PLT_SCALER_LOGGER_LEVEL}"
    }
  },
  "watch": {
    "enabled": "{DEV_K8S}"
  },
  "db": {
    "connectionString": "{PLT_SCALER_DATABASE_URL}",
    "graphql": true,
    "openapi": {
      "ignoreRoutes": [
        {
          "method": "POST",
          "path": "/controllers"
        }
      ]
    },
    "limit": {
      "default": 100,
      "max": 1000
    }
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "plugins": {
    "paths": ["./plugins", "./routes"],
    "typescript": false
  },
  "metrics": {
    "server": "parent"
  },
  "clients": [
    {
      "schema": "../../clients/activities/activities.openapi.json",
      "name": "activities",
      "type": "openapi",
      "serviceId": "activities"
    },
    {
      "schema": "../../clients/control-plane/control-plane.openapi.json",
      "name": "controlPlane",
      "type": "openapi",
      "serviceId": "control-plane"
    }
  ]
}
