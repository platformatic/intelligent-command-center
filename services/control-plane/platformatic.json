{
  "$schema": "https://schemas.platformatic.dev/@platformatic/db/2.59.0.json",
  "server": {
    "logger": {
      "level": "{PLT_CONTROL_PLANE_LOG_LEVEL}"
    },
    "pluginTimeout": 60000
  },
  "db": {
    "connectionString": "{PLT_CONTROL_PLANE_DATABASE_URL}",
    "graphql": true,
    "openapi": true,
    "events": false,
    "schemalock": true,
    "limit": {
      "default": 100,
      "max": 1000
    }
  },
  "migrations": {
    "dir": "migrations",
    "autoApply": true
  },
  "types": {
    "autogenerate": true
  },
  "plugins": {
    "paths": [
      "./plugins",
      "./routes"
    ],
    "typescript": false
  },
  "clients": [
    {
      "schema": "../../clients/activities/activities.openapi.json",
      "name": "activities",
      "type": "openapi",
      "serviceId": "activities"
    },
    {
      "schema": "../../clients/metrics/metrics.openapi.json",
      "name": "metrics",
      "type": "openapi",
      "serviceId": "metrics"
    }
  ],
  "watch": "{DEV_K8S}"
}
